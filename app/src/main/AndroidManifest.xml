<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_for_college">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App_For_College">
        <activity android:name=".Menu"></activity>
        <activity android:name=".UsersSkills" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".sign_up" />
        <activity android:name=".SkillData" />
        <activity android:name=".AddSkill" />
        <activity android:name=".GoToHome" />
        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait"> <!--Prevents app from rotating on this screen - for the moment it only really works in portrait {DC}-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>